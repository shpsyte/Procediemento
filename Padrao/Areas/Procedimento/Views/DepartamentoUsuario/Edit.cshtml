 @model DepartamentoUsuario

@{
     ViewBag.Title = @Html.T("titleEdit").ToString();
    
     Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

@{
    var options = new AjaxOptions()
                      {
                          Url = Url.Action("Edit", "DepartamentoUsuario"),
                          OnBegin = "Iniciando",
                          OnSuccess = "Sucesso ('Index', 'Procedimento/DepartamentoUsuario') ",
                          OnFailure = "Erro",
                          HttpMethod = "Post",
						  OnComplete = "Complete"
                      };  
}





<div class="container">
    <p><span class="label label">@Html.T("DepartamentoUsuario")</span></p>




    @using (Ajax.BeginForm(options))
    {
        
						@Html.HiddenFor(model => model.ID)
				 




        <div class="controls">
            <div class="container">
                <div class="pull-left">
                    <p>

                        <button type="submit" class="btn btn-primary">
                            <i class="icon-ok icon-white"></i>@Html.T("btbSalvar").ToString()
                        </button>
                        <a class="btn " href="@Url.Action("Index", "DepartamentoUsuario")"><i class="fa fa-caret-left"></i>@Html.T("VoltarListagem")</a>
                    </p>
                </div>
            </div>
            <div class="containerisco">

                <div class="tabbable">
                    <!-- Only required for left/right tabs -->
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab1" data-toggle="tab">@Html.T("Geral")</a></li>
                        <li><a href="#tab2" data-toggle="tab"></a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab1">
                            <div class="controls">
							 <div class="row">
																				
																																		<div class="span3">
																<div class="editor-label">
																															<span class="display-label-text">@Html.LabelFor(model => model.CD_DEPARTAMENTO)</span>
																														</div>
													  <div class="editor-field">
														@Html.TextBoxFor(model => model.CD_DEPARTAMENTO, new { @class = "form-control" })
														@Html.ValidationMessageFor(model => model.CD_DEPARTAMENTO)
											          </div>
													  </div>
									
																					

																				
																																		<div class="span3">
																<div class="editor-label">
																															<span class="display-label-text">@Html.LabelFor(model => model.CD_USUARIO)</span>
																														</div>
													  <div class="editor-field">
														@Html.TextBoxFor(model => model.CD_USUARIO, new { @class = "form-control" })
														@Html.ValidationMessageFor(model => model.CD_USUARIO)
											          </div>
													  </div>
									
																					

									                            </div>
							 </div>
                        </div>
                        <div class="tab-pane" id="tab2">
                            <div class="controls">
                                <div class="display-label">
                                </div>
                                <div class="display-field">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
         
    }
</div>



		

		

		


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


