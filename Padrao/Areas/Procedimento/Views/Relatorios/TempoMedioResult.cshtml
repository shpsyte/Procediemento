<script type="text/javascript">

    function collapseGroupRows() {

        var grid = $("#Grid").data("kendoGrid");
        grid.collapseGroup(grid.tbody.find(">tr.k-grouping-row"));
        $('tr[role*="row"]').hide();
    }

</script>

