@model IEnumerable<wpa_troca_departamentos>

@{ int count = Model == null ? 0 : Model.Count(); }

<hr />


<div class="row placeholders">
    <div class="col-md-6">
        <h2>TEMPO MÉDIO DE RESPOSTA</h2>
        <div class="ativas">@ViewData["tempo_medio_resposta"].ToString()</div>
        
    </div>
    <div class="col-md-6">
        <h2>RESPONDIDO FORA DO PRAZO</h2>
        <div class="ativas">@ViewData["qtde_fora"]</div>
    </div>
</div>

<hr />

<div class="container_none">
    <div class="page-header-isco">
        <h2>@Html.T("ProcedimentoAdm") <small>Listagem Geral</small></h2>
    </div>
    <div class="panel panel-success">
        <div class="panel-heading">
            <div class="btn-group">
                <a class="btn btn-default" href="@Url.Action("TempoMedio")"><i class="fa fa-refresh"></i>&nbsp;Nova Pesquisa</a>
            </div>
        </div>

        <div class="panel-body">
            @(Html.Kendo().Grid(Model)
            .Name("Grid")
            
             .Columns(columns =>
    {
        columns.Bound(p => p.CD_PROCEDIMENTO).Visible(true).ClientTemplate("#= productDetails(data) #").Title(">").Width(30);
        columns.Bound(p => p.CD_PROCEDIMENTO).Visible(true).Width(60).Title("Procedimento");
        columns.Bound(p => p.ProcedimentoAdm.Clientes.FANTASIA).Width(150).Title("Cliente");
        columns.Bound(p => p.ProcedimentoAdm.tp_procedimento.DES_TIPO).Width(100).Title("Tipo");
        columns.Bound(p => p.DTA_ENTRADA_DEP_NOVA).Format("{0:dd/MM/yyyy HH:mm:ss}").Width(160).Title("Recebido");
        columns.Bound(p => p.DEPANT.DESC_DEPARTAMENTO).Title("De");
        columns.Bound(p => p.DTA_SAIDA_DEP_NOVA).Format("{0:dd/MM/yyyy HH:mm:ss}").Width(160).Title("Encaminhado");
        columns.Bound(p => p.DEPNOVA.DESC_DEPARTAMENTO).Title("A");
        columns.Bound(p => p.HORASUTEIS).Width(70).Title("Horas Úteis");
        //columns.Bound(p => p.DEPANT.TEMPO_PADRAO).Width(70).Title("Tempo");
        //columns.Bound(p => p.PERCENTUAL).Width(70).Title("%");
        columns.Bound(p => p.PERCENTUAL).Visible(true).ClientTemplate("#= productDetailsImg(data) #").Title("PD").Width(20);


    })

        .Selectable(selectable => selectable.Mode(GridSelectionMode.Single))
        .Pageable(pageable => pageable
        .PageSizes(true)
                .ButtonCount(100)
        .Messages(d => d.Display("{0} - {1} de {2} Registros"))
        .Messages(d => d.ItemsPerPage("Itens por Página"))

        )
        .Sortable()
        .Groupable()
        .Filterable()
        .DataSource(dataSource => dataSource
            .Ajax()
            .ServerOperation(true)
                  .Model(m =>
                  {
                    m.Id(p => p.NUM_SEQ);
                  })
                    .PageSize(100)
            .Read(read => read.Action("TempoMedioResult", "Relatorios"))
        ))

        </div>
    </div>
</div>


<script>

    function productDetailsImg(product) {
        //var html = "<img src='../../Images/Logo.png' />";
        //return html;

        var html = "<img src='../../Images/SetaAcima.png' />";


        if (product.PERCENTUAL <= 0) {
            html = "<img src='../../Images/SetaAcima.png' />";
        } else
            if (product.PERCENTUAL > 0 && product.PERCENTUAL < 80) {
                html = "<img src='../../Images/SetaAcima.png' />";
            } else
                if (product.PERCENTUAL > 80 && product.PERCENTUAL < 100) {
                    html = "<img src='../../Images/SetaDireita.png' />";
                } else
                    html = "<img src='../../Images/SetaBaixo.png' />";


        return html;

    }
</script>


